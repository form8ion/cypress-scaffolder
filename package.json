{
  "name": "@form8ion/cypress-scaffolder",
  "description": "opinionated scaffolder for leveraging Cypress for testing a project",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "engines": {
    "node": "^18.19.0 || ^20.9.0 || >=22.11.0"
  },
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "form8ion/cypress-scaffolder",
  "bugs": "https://github.com/form8ion/cypress-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/cypress-scaffolder",
  "main": "./lib/index.js",
  "exports": "./lib/index.js",
  "sideEffects": false,
  "scripts": {
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "prepare": "husky install",
    "lint:publish": "publint --strict",
    "lint:js:fix": "run-s 'lint:js -- --fix'",
    "lint:engines": "ls-engines",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "pretest:integration:base": "run-s build",
    "test:integration:base": "NODE_OPTIONS=--enable-source-maps DEBUG=any cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "lint:gherkin": "gherkin-lint --config=.gherkin-lintrc.json"
  },
  "files": [
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.6.3+sha512.4085a763162e0e3acd19a4e9d23ad3aa0978e501ccf947dd7233c12a689ae0bb0190763c4ef12366990056b34eec438903ffed38fde4fbd722a17c2a7407ee92",
  "dependencies": {
    "@form8ion/core": "^4.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.3.0",
    "@form8ion/commitlint-config": "2.0.8",
    "@form8ion/eslint-config": "7.0.13",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/remark-lint-preset": "6.0.7",
    "@travi/any": "3.1.3",
    "ban-sensitive-files": "1.10.11",
    "c8": "10.1.3",
    "cross-env": "10.1.0",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.1.7",
    "lockfile-lint": "4.14.1",
    "ls-engines": "0.9.3",
    "mock-fs": "5.5.0",
    "npm-run-all2": "8.0.4",
    "publint": "0.3.15",
    "remark-cli": "12.0.1",
    "rimraf": "6.1.2",
    "rollup": "4.53.3",
    "rollup-plugin-auto-external": "2.0.0",
    "vitest": "4.0.13",
    "vitest-when": "0.10.0"
  }
}
